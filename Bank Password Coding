package RepetitionAndSelection;
import java.util.Scanner;
public class BankPassword {

	private static Scanner sc;
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		sc = new Scanner (System.in);
		int ac;
		int pw = 9999;
		for(int i=2; i>=0; i--) {
            System.out.print("Enter your account password: ");
            ac = sc.nextInt();

            if(ac==pw) {
            	System.out.println("Your password is correct.");
            	break;
            }
            else
            	System.out.print("Your password is wrong! You have "+i+" chances left.\n");
            System.out.println();
            
            if(i==0) {
            	System.out.print("Sorry, you need to wait 5 minutes to key in your password again!");
            
	    	
            }
		}
	}
}


	    



