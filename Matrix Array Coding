package selfProgramming;
import java.util.Scanner;
public class matrixArray {

	private static Scanner sc;
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int m, n, i, j;   
		
		sc = new Scanner(System.in);   
		System.out.print("Enter the number of rows: ");   //taking row as input  
		m = sc.nextInt();   
		System.out.print("Enter the number of columns: ");   //taking column as input  
		n = sc.nextInt();   
		
		int array[][] = new int[m][n];   // Declaring the two-dimensional matrix   
		System.out.println("Enter the elements of the array: ");   // Read the matrix values   
		
		for (i = 0; i < m; i++)   //loop for row  
		for (j = 0; j < n; j++)   //inner for loop for column 
		array[i][j] = sc.nextInt();   
  
		System.out.println("Elements of the array are: ");   		//accessing array elements 
		for (i = 0; i < m; i++)   
		{   
		for (j = 0; j < n; j++)   
		
		System.out.print(array[i][j] + " ");   //prints the array elements  	
		System.out.println();   //throws the cursor to the next line  
		}   
	}

}
